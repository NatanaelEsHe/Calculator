<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.alumno.calculator.MainActivity"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="73dp">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@android:color/black"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <TextView
            android:id="@+id/tv_display"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/tv_memo"
            android:background="@android:color/transparent"
            android:textAlignment="textEnd"
            android:textColor="@android:color/background_light"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/tv_memo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:textAlignment="textEnd"
            android:textColor="@android:color/background_light"
            android:textSize="20sp" />

        <TableLayout
            android:id="@+id/tableLayout"
            android:layout_width="300dp"
            android:layout_height="253dp"
            android:layout_below="@+id/tv_display"
            android:background="@android:color/black"
            tools:layout_editor_absoluteX="635dp"
            tools:layout_editor_absoluteY="77dp">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/b_ac"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginBottom="1dp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginTop="1dp"
                    android:layout_weight="1"
                    android:background="@drawable/boton_land"
                    android:backgroundTint="@android:color/holo_green_light"
                    android:onClick="numero"
                    android:text="AC"
                    android:textColor="@android:color/background_light"
                    android:textSize="15sp"
                    android:textStyle="bold|italic" />

                <Button
                    android:id="@+id/b_masmenos"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginBottom="1dp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginTop="1dp"
                    android:layout_weight="1"
                    android:background="@drawable/boton_land"
                    android:backgroundTint="@android:color/holo_green_light"
                    android:onClick="numero"
                    android:text="+/-"
                    android:textColor="@android:color/background_light"
                    android:textSize="15sp"
                    android:textStyle="bold|italic" />

                <Button
                    android:id="@+id/b_por"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginBottom="1dp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginTop="1dp"
                    android:layout_weight="1"
                    android:background="@drawable/boton_land"
                    android:backgroundTint="@android:color/holo_green_light"
                    android:onClick="numero"
                    android:text="%"
                    android:textColor="@android:color/background_light"
                    android:textSize="15sp"
                    android:textStyle="bold|italic" />

                <Button
                    android:id="@+id/b_div"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginBottom="1dp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginTop="1dp"
                    android:layout_weight="1"
                    android:background="@drawable/boton_land"
                    android:backgroundTint="@android:color/holo_green_light"
                    android:onClick="numero"
                    android:text="/"
                    android:textAllCaps="false"
                    android:textColor="@android:color/background_light"
                    android:textSize="15sp"
                    android:textStyle="bold" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/b_7"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginBottom="1dp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginTop="1dp"
                    android:layout_weight="1"
                    android:background="@drawable/boton_land"
                    android:onClick="numero"
                    android:text="7"
                    android:textColor="@android:color/background_light"
                    android:textSize="15sp" />

                <Button
                    android:id="@+id/b_8"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginBottom="1dp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginTop="1dp"
                    android:layout_weight="1"
                    android:background="@drawable/boton_land"
                    android:onClick="numero"
                    android:text="8"
                    android:textColor="@android:color/background_light"
                    android:textSize="15sp" />

                <Button
                    android:id="@+id/b_9"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginBottom="1dp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginTop="1dp"
                    android:layout_weight="1"
                    android:background="@drawable/boton_land"
                    android:onClick="numero"
                    android:text="9"
                    android:textColor="@android:color/background_light"
                    android:textSize="15sp" />

                <Button
                    android:id="@+id/b_mul"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginBottom="1dp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginTop="1dp"
                    android:layout_weight="1"
                    android:background="@drawable/boton_land"
                    android:backgroundTint="@android:color/holo_green_light"
                    android:onClick="numero"
                    android:text="x"
                    android:textAllCaps="false"
                    android:textColor="@android:color/background_light"
                    android:textSize="15sp"
                    android:textStyle="bold" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="5dp">

                <Button
                    android:id="@+id/b_4"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginBottom="1dp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginTop="1dp"
                    android:layout_weight="1"
                    android:background="@drawable/boton_land"
                    android:onClick="numero"
                    android:text="4"
                    android:textColor="@android:color/background_light"
                    android:textSize="15sp" />

                <Button
                    android:id="@+id/b_5"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginBottom="1dp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginTop="1dp"
                    android:layout_weight="1"
                    android:background="@drawable/boton_land"
                    android:onClick="numero"
                    android:text="5"
                    android:textColor="@android:color/background_light"
                    android:textSize="15sp" />

                <Button
                    android:id="@+id/b_6"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginBottom="1dp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginTop="1dp"
                    android:layout_weight="1"
                    android:background="@drawable/boton_land"
                    android:onClick="numero"
                    android:text="6"
                    android:textColor="@android:color/background_light"
                    android:textSize="15sp" />

                <Button
                    android:id="@+id/b_restar"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginBottom="1dp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginTop="1dp"
                    android:layout_weight="1"
                    android:background="@drawable/boton_land"
                    android:backgroundTint="@android:color/holo_green_light"
                    android:onClick="numero"
                    android:text="-"
                    android:textColor="@android:color/background_light"
                    android:textSize="15sp"
                    android:textStyle="bold" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/b_1"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginBottom="1dp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginTop="1dp"
                    android:layout_weight="1"
                    android:background="@drawable/boton_land"
                    android:onClick="numero"
                    android:text="1"
                    android:textColor="@android:color/background_light"
                    android:textSize="15sp" />

                <Button
                    android:id="@+id/b_2"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginBottom="1dp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginTop="1dp"
                    android:layout_weight="1"
                    android:background="@drawable/boton_land"
                    android:onClick="numero"
                    android:text="2"
                    android:textColor="@android:color/background_light"
                    android:textSize="15sp" />

                <Button
                    android:id="@+id/b_3"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginBottom="1dp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginTop="1dp"
                    android:layout_weight="1"
                    android:background="@drawable/boton_land"
                    android:onClick="numero"
                    android:text="3"
                    android:textColor="@android:color/background_light"
                    android:textSize="15sp" />

                <Button
                    android:id="@+id/b_sumar"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginBottom="1dp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginTop="1dp"
                    android:layout_weight="1"
                    android:background="@drawable/boton_land"
                    android:backgroundTint="@android:color/holo_green_light"
                    android:onClick="numero"
                    android:text="+"
                    android:textAllCaps="false"
                    android:textColor="@android:color/background_light"
                    android:textSize="15sp"
                    android:textStyle="bold" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/b_0"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginBottom="1dp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginTop="1dp"
                    android:layout_weight="2"
                    android:background="@drawable/boton_land"
                    android:onClick="numero"
                    android:text="0"
                    android:textColor="@android:color/background_light"
                    android:textSize="15sp" />

                <Button
                    android:id="@+id/b_punto"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginBottom="1dp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginTop="1dp"
                    android:layout_weight="1"
                    android:background="@drawable/boton_land"
                    android:onClick="numero"
                    android:text="."
                    android:textColor="@android:color/background_light"
                    android:textSize="15sp" />

                <Button
                    android:id="@+id/b_res"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginBottom="1dp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginTop="1dp"
                    android:layout_weight="1"
                    android:background="@drawable/boton_land"
                    android:backgroundTint="@android:color/holo_green_light"
                    android:onClick="numero"
                    android:text="="
                    android:textAllCaps="false"
                    android:textColor="@android:color/background_light"
                    android:textSize="15sp"
                    android:textStyle="bold" />
            </TableRow>
        </TableLayout>

        <RadioGroup
            android:id="@+id/rg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/tv_display"
            android:layout_marginEnd="18dp"
            android:orientation="horizontal"
            android:layout_toEndOf="@+id/tableLayout">

            <RadioButton
                android:id="@+id/b_dec"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@drawable/radio_boton_land"
                android:text="@string/b_decimal"
                android:textColor="@android:color/holo_green_light"
                android:checked="true"
                android:onClick="cambiarModo"/>

            <RadioButton
                android:id="@+id/b_bin"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@drawable/radio_boton_land"
                android:text="@string/b_bin"
                android:textColor="@android:color/holo_green_light"
                android:onClick="cambiarModo"/>

            <RadioButton
                android:id="@+id/b_hexa"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@drawable/radio_boton_land"
                android:text="@string/b_hexa"
                android:textColor="@android:color/holo_green_light"
                android:onClick="cambiarModo"/>
        </RadioGroup>


        <Button
            android:id="@+id/b_A"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:layout_alignEnd="@+id/rg"
            android:layout_below="@+id/rg"
            android:layout_marginEnd="60dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/radio_boton_land"
            android:onClick="numero"
            android:text="A"
            android:visibility="invisible"
            android:textColor="@android:color/holo_green_light"
            android:textSize="15sp" />

        <Button
            android:id="@+id/b_C"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:layout_alignStart="@+id/b_A"
            android:layout_below="@+id/b_A"
            android:layout_marginTop="11dp"
            android:background="@drawable/radio_boton_land"
            android:onClick="numero"
            android:text="C"
            android:visibility="invisible"
            android:textColor="@android:color/holo_green_light"
            android:textSize="15sp" />

        <Button
            android:id="@+id/b_E"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:layout_alignStart="@+id/b_C"
            android:layout_below="@+id/b_C"
            android:layout_marginTop="12dp"
            android:background="@drawable/radio_boton_land"
            android:onClick="numero"
            android:text="E"
            android:visibility="invisible"
            android:textColor="@android:color/holo_green_light"
            android:textSize="15sp" />

        <Button
            android:id="@+id/b_B"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:layout_alignEnd="@+id/rg"
            android:layout_below="@+id/rg"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/radio_boton_land"
            android:onClick="numero"
            android:text="B"
            android:visibility="invisible"
            android:textColor="@android:color/holo_green_light"
            android:textSize="15sp"/>

        <Button
            android:id="@+id/b_D"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:layout_alignStart="@+id/b_B"
            android:layout_below="@+id/b_B"
            android:layout_marginTop="11dp"
            android:background="@drawable/radio_boton_land"
            android:onClick="numero"
            android:text="D"
            android:visibility="invisible"
            android:textColor="@android:color/holo_green_light"
            android:textSize="15sp"/>

        <Button
            android:id="@+id/b_F"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:layout_alignStart="@+id/b_D"
            android:layout_below="@+id/b_D"
            android:layout_marginTop="12dp"
            android:background="@drawable/radio_boton_land"
            android:onClick="numero"
            android:text="F"
            android:visibility="invisible"
            android:textColor="@android:color/holo_green_light"
            android:textSize="15sp"  />
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
